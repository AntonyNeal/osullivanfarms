{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "root": {
      "matchCondition": {
        "route": "/"
      },
      "backendUri": "https://osullivanfarms-api.azurewebsites.net/api/HttpTrigger"
    },
    "api": {
      "matchCondition": {
        "route": "/{*path}"
      },
      "backendUri": "https://osullivanfarms-api.azurewebsites.net/api/HttpTrigger/{path}"
    }
  }
}

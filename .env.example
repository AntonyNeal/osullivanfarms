# ============================================================================
# DATABASE (DigitalOcean Managed PostgreSQL)
# ============================================================================
# Connection string format: postgresql://user:password@host:port/database
# Get from DigitalOcean dashboard: https://cloud.digitalocean.com/databases
DATABASE_URL=postgresql://doadmin:password@db-host:25060/defaultdb

# ============================================================================
# EMAIL SERVICE (SendGrid)
# ============================================================================
# API Key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Verified sender in SendGrid
SENDGRID_FROM_EMAIL=bookings@clairehamilton.com.au

# Claire's email for booking notifications
CLAIRE_NOTIFICATION_EMAIL=claire@clairehamilton.com.au

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Frontend URL for CORS
VITE_API_BASE_URL=https://clairehamilton.com.au
ALLOWED_ORIGIN=https://clairehamilton.com.au

# DigitalOcean Functions base URL (set automatically by platform)
VITE_FUNCTIONS_URL=https://faas-nyc1-your-namespace.doserverless.co

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
# Google Analytics 4
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Ads (remarketing)
VITE_GOOGLE_ADS_ID=AW-XXXXXXXXX
VITE_GOOGLE_ADS_CONVERSION_LABEL=XXXXXXXXX

# Google Tag Manager
VITE_GTM_ID=GTM-XXXXXXX

# PostHog (optional, for conversion funnel analysis)
POSTHOG_API_KEY=phc_xxxxxxxxxxxxx

# Plausible (optional, privacy-focused analytics)
PLAUSIBLE_DOMAIN=clairehamilton.com.au

# ============================================================================
# PAYMENT GATEWAY (Phase 2 - Future)
# ============================================================================
# Eway API credentials
# EWAY_API_KEY=xxxxxxxxxxxx
# EWAY_PAYMENT_LIVE=false

# Tyro API credentials (alternative)
# TYRO_API_KEY=xxxxxxxxxxxx
# TYRO_MERCHANT_ID=xxxxxxxxxxxx

# ============================================================================
# ADMIN AUTHENTICATION (Phase 2 - Future)
# ============================================================================
# JWT secret for token signing (generate: openssl rand -base64 32)
# JWT_SECRET=your-secret-key-here

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_ASSESSMENT_ENABLED=false

# ============================================================================
# INTEGRATIONS (Optional)
# ============================================================================
# OpenAI (optional)
VITE_OPENAI_API_KEY=sk-proj-XXXXXXXXXXXX

# Halaxy Booking System Integration
VITE_HALAXY_BOOKING_URL=http://localhost:3001/api/halaxy/booking
VITE_HALAXY_AVAILABILITY_URL=http://localhost:3001/api/halaxy/availability

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV=production
DEBUG=false

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env files to git (add to .gitignore)
# 2. Store sensitive values in DigitalOcean App Platform secrets
# 3. Rotate API keys periodically for security
# 4. Keep JWT_SECRET secret and regenerate on key rotation
